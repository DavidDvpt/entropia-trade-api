{
  "name": "api-express-prisma",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "prepare": "husky install",
    "start": "node src/index.js",
    "dev": "env-cmd -f ./config/dev.env nodemon src/index.js",
    "lint": "./node_modules/.bin/eslint --fix src",
    "migrate:dev": "env-cmd -f ./config/dev.env npx prisma migrate dev",
    "migrate:test": "env-cmd -f ./config/test.env npx prisma migrate dev",
    "generate": "env-cmd -f ./config/test.env npx prisma generate",
    "seed": "npx prisma migrate reset && node ./prisma/seed.js",
    "dropdb:test": "env-cmd -f ./config/test.env npx prisma migrate reset -f",
    "dropdb:dev": "env-cmd -f ./config/dev.env npx prisma migrate reset -f",
    "test": "env-cmd -f ./config/test.env jest --detectOpenHandles --watch --testTimeout=10000",
    "pretest": "env-cmd -f ./config/test.env npx prisma migrate reset -f"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^2.19.0",
    "bcrypt": "^5.0.1",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-jsdoc-swagger": "^1.3.2",
    "helmet": "^4.4.1",
    "joi": "^17.4.0",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "env-cmd": "^10.1.0",
    "eslint": "^7.14.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-prettier": "^3.1.4",
    "faker": "^5.5.0",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.2",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "prisma": "^2.19.0",
    "supertest": "^6.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.js": [
      "./node_modules/.bin/eslint --max-warnings=0",
      "pretty-quick --staged"
    ]
  }
}
